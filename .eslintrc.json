{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-plusplus": "off",
      "import/no-cycle": "off", // ok in our chess game model
      "@typescript-eslint/lines-between-class-members": "off",
      "import/prefer-default-export": "off",
      "react/no-array-index-key": "off", // Render chess-board structure //
      "no-new": "off",
      "class-methods-use-this": "off",
      "no-param-reassign": "off",
      "react/require-default-props": "off",
      "max-len": ["error", { "code": 120 }],
      "consistent-return": "off"
    }
}
